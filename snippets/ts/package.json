{
  "name": "restate-ts-template",
  "version": "0.0.1",
  "description": "Template for JavaScript/TypeScript services running with Restate (https://github.com/restatedev/) ",
  "main": "app.js",
  "type": "commonjs",
  "scripts": {
    "build": "tsc --noEmitOnError",
    "prebundle": "rm -rf dist",
    "bundle": "esbuild src/app.ts --bundle --minify --sourcemap --platform=node --target=es2020 --outfile=dist/index.js",
    "postbundle": "cd dist && zip -r index.zip index.js*",
    "app": "node ./dist/app.js",
    "app-dev": "ts-node-dev --watch src --respawn --transpile-only ./src/app.ts",
    "lint": "eslint --ignore-path .eslintignore --ext .ts .",
    "format": "prettier --ignore-path .eslintignore --write \"**/*.+(js|ts|json)\"",
    "test": "vitest run"
  },
  "dependencies": {
    "@ai-sdk/openai": "^2.0.23",
    "@restatedev/restate-cdk": "^1.0.1",
    "@restatedev/restate-sdk": "^1.8.4",
    "@restatedev/restate-sdk-clients": "^1.8.4",
    "@restatedev/restate-sdk-testcontainers": "^1.8.4",
    "@restatedev/restate-sdk-zod": "^1.8.4",
    "express": "^4.19.2",
    "superjson": "^2.2.2",
    "zod": "^3.25.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.2",
    "esbuild": "^0.25.4",
    "tsx": "^4.19.2",
    "typescript": "^5.4.5",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "ai": "5.0.29",
    "eslint": "^8.35.0",
    "prettier": "^2.8.4",
    "ts-node-dev": "^1.1.1",
    "vitest": "^2.1.4"
  }
}
